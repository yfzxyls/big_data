<assembly>
    <id>bin</id>
    <!-- 最终打包成一个用于发布的zip文件 -->
    <formats>
        <format>zip</format>
    </formats>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact><!-- 当前项目构件是否包含在这个依赖集合里 -->
            <outputDirectory>lib</outputDirectory><!-- 打包进zip文件的lib目录 -->
            <unpack>false</unpack><!-- 不解压第三方jar -->
        </dependencySet>
    </dependencySets>

    <fileSets>
        
    
        <!-- 把项目自己编译出来的jar文件，打包进zip文件的lib目录 -->
        <fileSet>
            
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>ct_count_duration-1.0-SNAPSHOT.jar</include>
            </includes>
            <excludes>
                <exclude>*sources*</exclude>
                <exclude>*javadoc*</exclude>
            </excludes>
        </fileSet>
    
        <!-- 把项目的脚本文件目录（ src/main/scripts ）中的启动脚本文件，打包进zip文件的跟目录 -->
        <fileSet>
            <lineEnding>unix</lineEnding>
            <directory>${project.basedir}/src/main/assembly/scripts</directory>
            <outputDirectory>scripts</outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
            
            <fileMode>0755</fileMode>
        </fileSet>

    </fileSets>
</assembly>